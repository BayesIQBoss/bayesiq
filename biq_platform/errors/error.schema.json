{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "platform://error",
    "type": "object",
    "additionalProperties": false,
    "required": ["code", "message"],
    "properties": {
      "code": {
        "type": "string"
      },
      "message": {
        "type": "string"
      },
      "details": {
        "type": "object",
        "additionalProperties": true,
        "default": {}
      }
    }
  }