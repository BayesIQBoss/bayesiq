{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "tool://sonos.set_volume/output",
    "type": "object",
    "additionalProperties": false,
    "required": ["speaker_id", "previous_volume", "new_volume", "meta"],
    "properties": {
      "speaker_id": { "type": "string" },
      "previous_volume": { "type": "integer", "minimum": 0, "maximum": 100 },
      "new_volume": { "type": "integer", "minimum": 0, "maximum": 100 },
      "meta": {
        "type": "object",
        "additionalProperties": false,
        "required": ["source", "applied_at"],
        "properties": {
          "source": { "type": "string", "const": "sonos" },
          "applied_at": { "type": "string", "format": "date-time" }
        }
      }
    }
  }