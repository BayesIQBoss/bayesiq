{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "tool://noop.execute/input",
    "type": "object",
    "additionalProperties": false,
    "required": ["message"],
    "properties": {
      "message": {
        "type": "string",
        "minLength": 1,
        "description": "Any message to echo back after approval."
      },
      "count": {
        "type": "integer",
        "minimum": 1,
        "maximum": 10,
        "default": 1,
        "description": "How many times to repeat the message."
      }
    }
  }