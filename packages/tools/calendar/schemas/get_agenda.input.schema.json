{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "tool://calendar.google.get_agenda/input",
    "type": "object",
    "additionalProperties": false,
    "required": ["time_min", "time_max", "timezone"],
    "properties": {
      "time_min": {
        "type": "string",
        "format": "date-time",
        "description": "RFC3339 inclusive start time"
      },
      "time_max": {
        "type": "string",
        "format": "date-time",
        "description": "RFC3339 exclusive end time"
      },
      "timezone": {
        "type": "string",
        "description": "IANA timezone, e.g., America/Chicago"
      },
      "include_description": {
        "type": "boolean",
        "default": false,
        "description": "If true, include event description; default false for privacy."
      },
      "max_results": {
        "type": "integer",
        "minimum": 1,
        "maximum": 2500,
        "default": 250,
        "description": "Max events to return."
      }
    }
  }